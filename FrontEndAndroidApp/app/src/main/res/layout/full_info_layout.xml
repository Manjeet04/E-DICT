<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slamback"
    >
    <!-- fillcolor vale se white ki jagah aur koi aa jata hai -->
    <!-- 1 Cardvirw mei 1 hi layout ho skta hai aur banane jao to error -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/rel1">

        <ImageView
            android:id="@+id/cor1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#FF0000"
            android:alpha="0.6"





            />


        <ImageView
            android:id="@+id/prop1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:padding="3dp"
            android:background="#FFFF00"
            android:scaleType="centerCrop"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Details"
                android:textStyle="bold"
                android:textColor="#FF80AA"
                android:textSize="18sp"
                android:padding="6dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="6dp"
                android:background="#EEEEEE"/>

            <android.support.v7.widget.CardView
                android:id="@+id/car1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prop1"
                android:layout_margin="10dp"
                android:background="#FFFF00">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rec1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address Details"
                android:textStyle="bold"
                android:textColor="#FF80AA"
                android:textSize="18sp"
                android:padding="6dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="6dp"
                android:background="#EEEEEE"/>
            <android.support.v7.widget.CardView
                android:id="@+id/car2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prop1"
                android:layout_margin="10dp"
                android:background="#FFFF00">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rec2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fun Details"
                android:textStyle="bold"
                android:textColor="#FF80AA"
                android:textSize="18sp"
                android:padding="6dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="6dp"
                android:background="#EEEEEE"/>

            <android.support.v7.widget.CardView
                android:id="@+id/car3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/prop1"
                android:layout_margin="10dp"
                android:background="#FFFF00">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rec3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </android.support.v7.widget.CardView>



        </LinearLayout>


    </ScrollView>


</LinearLayout>